function connexion($mdp,$Confirm_mdp,$nom,$prenom,$e_mail,$telephone){

       
        if($mdp == $Confirm_mdp && !empty($nom) && !empty($prenom) && !empty($e_mail) && !empty($telephone)){
                echo '
        
                        <!DOCTYPE html>
                <html>
                <head>
                <meta charset="utf-8"/>
                <title> Sen Sanitas  </title>
                <link rel="stylesheet" type="text/css" href="formulaire1.css" />
                <link href="https://fonts.googleapis.com/css?family=Nunito:400,700&display=swap" rel="stylesheet">
                </head>

                <style>
                </style>

                <body>

                <div>
                <h2 style="color:white;"> Sen Sanitas </h2>
                <h3 style="color:white;">Votre inscription a bien été enregistrée veuillez vous connecter : </h3>
                </div>
                <div class="boite"  style="background-color:rgba(255,255,255,0.30); border-radius:15px; height:590px;">
                        
                        
                        <form method="POST" action="formulaire3.php">

                        <div>
                        <label for="pseudo"> E-mail<span>*</span></label>
                        <input type="email" name="mail" placeholder="E-mail"></input>
                        </div>

                <div>
                <label for="pseudo" > Mot de passe<span>*</span></label>
                <input type="password" name="mdp2" placeholder="Mot de passe" ></input>
